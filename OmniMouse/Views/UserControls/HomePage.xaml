<UserControl x:Class="OmniMouse.Views.UserControls.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OmniMouse.Views.UserControls"
             xmlns:viewModel="clr-namespace:OmniMouse.ViewModel"
             xmlns:mvvm="clr-namespace:OmniMouse.MVVM"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="625"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded"
             AllowDrop="True"
             DragEnter="HomePage_DragEnter"
             DragOver="HomePage_DragOver"
             DragLeave="HomePage_DragLeave"
             Drop="HomePage_Drop">

    <UserControl.DataContext>
        <viewModel:HomePageViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <mvvm:GreaterThanZeroConverter x:Key="GreaterThanZero"/>
        <mvvm:BytesToStringConverter x:Key="BytesToString"/>
        
        <SolidColorBrush x:Key="Bg" Color="#111315"/>
        <SolidColorBrush x:Key="Card" Color="#1E1F22"/>
        <SolidColorBrush x:Key="Ink" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Dim" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Text" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Warn" Color="#F59E0B"/>
        <SolidColorBrush x:Key="Err" Color="#EF4444"/>
        <SolidColorBrush x:Key="Success" Color="#10B981"/>

        <Style x:Key="PillBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#25272C"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#101113"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ModeBadgeStyle" TargetType="Border" BasedOn="{StaticResource Badge}">
            <Setter Property="Background" Value="{StaticResource Warn}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Background" Value="{StaticResource Success}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="Idle"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Text" Value="Connected"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusDotStyle" TargetType="Ellipse">
            <Setter Property="Fill" Value="{StaticResource Err}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Fill" Value="{StaticResource Success}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource PillBorder}" CornerRadius="24" Padding="14" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="OmniMouse" Foreground="{StaticResource Ink}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <Border x:Name="ModeBadge"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource ModeBadgeStyle}"
                        AutomationProperties.AutomationId="ModeBadge">
                    <TextBlock Style="{StaticResource StatusTextStyle}"/>
                </Border>
                <Ellipse x:Name="StatusDot" Width="12" Height="12" Margin="6,0,0,0"
                         Style="{StaticResource StatusDotStyle}"
                         AutomationProperties.AutomationId="StatusDot"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource PillBorder}" CornerRadius="20" Padding="12" Margin="0,0,0,12">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button x:Name="ConnectButton" Content="Connect"
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding CanConnect}"
                            AutomationProperties.AutomationId="ConnectButton"/>
                    <Button x:Name="DisconnectButton" Content="Disconnect" 
                            Command="{Binding DisconnectCommand}" 
                            IsEnabled="{Binding CanDisconnect}"
                            AutomationProperties.AutomationId="DisconnectButton"/>
                    <Button Content="Upload" Command="{Binding UploadFileCommand}" ToolTip="Select and send a file to peer"/>
                    <Button Content="Layout" Command="{Binding ShowLayoutCommand}" ToolTip="Show current machine layout"/>
                </StackPanel>

                <Border Grid.Column="1" CornerRadius="12" Background="#101113" Padding="8" Margin="12,0,0,0">
                    <StackPanel Orientation="Vertical">
                        <DockPanel LastChildFill="True" Margin="0,0,0,4">
                            <TextBlock Text="Status:" Foreground="{StaticResource Dim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="DiscoveryStatusBox" VerticalAlignment="Center" 
                                       Foreground="{StaticResource Ink}"
                                       Text="{Binding DiscoveryStatus, Mode=OneWay}"
                                       AutomationProperties.AutomationId="DiscoveryStatusBox"/>
                        </DockPanel>
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="Manual IP:" Foreground="{StaticResource Dim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button Content="→" Width="30" Margin="4,0,0,0" DockPanel.Dock="Right"
                                    Command="{Binding ConnectToIpCommand}"
                                    ToolTip="Connect to this IP directly"/>
                            <TextBox x:Name="ManualIpBox" VerticalAlignment="Center"
                                     Text="{Binding ManualIpAddress, UpdateSourceTrigger=PropertyChanged}"
                                     AutomationProperties.AutomationId="ManualIpBox"
                                     ToolTip="Enter peer IP if auto-discovery fails"/>
                        </DockPanel>
                    </StackPanel>
                </Border>

                <!-- File save location controls -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="12,0,0,0" VerticalAlignment="Center"
                            DataContext="{Binding FileShareViewModel}">
                    <TextBlock Text="Save to:" Foreground="{StaticResource Dim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding DownloadFolderPath, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="True" Width="260" VerticalAlignment="Center"/>
                    <Button Content="Change…" Command="{Binding BrowseDownloadFolderCommand}" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource PillBorder}" CornerRadius="16" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="OmniMouse Input/Output Log" Foreground="{StaticResource Ink}" FontWeight="SemiBold"/>
        </Border>

        <!-- File Sharing Panel -->
        <Border Grid.Row="3" CornerRadius="16" Padding="10" Margin="0,0,0,10"
                DataContext="{Binding FileShareViewModel}">
            <Border.Style>
                <Style TargetType="Border" BasedOn="{StaticResource PillBorder}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IncomingFiles.Count, Converter={StaticResource GreaterThanZero}}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <TextBlock Text="Incoming Files" Foreground="{StaticResource Ink}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ItemsControl ItemsSource="{Binding IncomingFiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#25272C" CornerRadius="12" Padding="10" Margin="0,0,0,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding FileName}" Foreground="{StaticResource Ink}" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding FileSizeBytes, Converter={StaticResource BytesToString}}" 
                                                   Foreground="{StaticResource Dim}" FontSize="12" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1" Content="Download" 
                                            Command="{Binding DataContext.DownloadFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Border Grid.Row="4" Style="{StaticResource PillBorder}" CornerRadius="18" Padding="10">
            <TextBox x:Name="ConsoleOutputBox"
                     Background="#101113"
                     Foreground="{StaticResource Ink}"
                     FontFamily="Consolas"
                     FontSize="14"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     Text="{Binding ConsoleOutput, Mode=OneWay}"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AutomationProperties.AutomationId="ConsoleOutputBox"/>
        </Border>

        <Border Grid.Row="5" Style="{StaticResource PillBorder}" CornerRadius="14" Padding="8" Margin="0,12,0,0">
            <TextBlock Foreground="{StaticResource Dim}" Text="OmniMouse v1.0 - Sharing your input across devices"/>
        </Border>

        <!-- Drag-over overlay highlight -->
        <Border x:Name="DragOverlay"
                Background="#40FFFFFF"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                CornerRadius="18"
                Visibility="Collapsed"
                IsHitTestVisible="False"
                Margin="6"
                Panel.ZIndex="1000">
            <TextBlock Text="Drop files to share"
                       Foreground="White"
                       FontWeight="SemiBold"
                       Opacity="0.9"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>