<Window x:Class="OmniMouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OmniMouse Input Monitor" Height="500" Width="800"
        Icon="/Resources/Icon.png" 
        Background="#111315">
    <!-- Added Icon, (icon is placeholder for now) and changed background color -->
    <!-- Going to add resources here to change colors etc.-->
    <Window.Resources>
        <SolidColorBrush x:Key="Bg" Color="#111315"/>
        <SolidColorBrush x:Key="Card" Color="#1E1F22"/>
        <SolidColorBrush x:Key="Ink" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Dim" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Text" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Warn" Color="#F59E0B"/>
        <SolidColorBrush x:Key="Err" Color="#EF4444"/>
        <!-- Pill style setters-->
        <Style x:Key="PillBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <!--<Button style setters-->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#25272C"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Text box style setters-->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#101113"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
        
        <!-- Badge style-->
        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

    </Window.Resources>

    <!-- Grid Layout here (more flexible than just dockpanel) -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--Header-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header here -->
    <Border Grid.Row="0" Style="{StaticResource PillBorder}" CornerRadius="24" Padding="14" Margin="0,0,0,12">
        <!-- Stack panel here -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="OmniMouse" Foreground="{StaticResource Ink}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Border x:Name="ModeBadge"
                    Style="{StaticResource Badge}"
                    Background="{StaticResource Warn}"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center">
                    <TextBlock x:Name="ModeBadgeText" Text="Idle"
                           Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </Border>
                <Ellipse x:Name="StatusDot" Width="12" Height="12"
                         Fill="{StaticResource Err}" Margin="6,0,0,0"/>
            </StackPanel>
    </Border>

    <Border Grid.Row="1" Style="{StaticResource PillBorder}" CornerRadius="20" Padding="12" Margin="0,0,0,12">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button x:Name="HostButton" Content="Host" Click="HostButton_Click"/>
                <Button x:Name="CohostButton" Content="Cohost" Click="CohostButton_Click"/>
                <Button x:Name="DisconnectButton" Content="Disconnect" Click="DisconnectButton_Click"/>
            </StackPanel>

            <Border Grid.Column="1" CornerRadius="12" Background="#101113" Padding="8" Margin="12,0,0,0">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Host IP:" Foreground="{StaticResource Dim}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="HostIpBox" VerticalAlignment="Center" />
                </DockPanel>
            </Border>
        </Grid>
    </Border>

    <Border Grid.Row="2" Style="{StaticResource PillBorder}" CornerRadius="16" Padding="10" Margin="0,0,0,10">
        <TextBlock Text="OmniMouse Input/Output Log" Foreground="{StaticResource Ink}" FontWeight="SemiBold"/>
    </Border>

    <Border Grid.Row="3" Style="{StaticResource PillBorder}" CornerRadius="18" Padding="10">
        <TextBox x:Name="ConsoleOutputBox"
                 Background="#101113"
                 Foreground="{StaticResource Ink}"
                 FontFamily="Consolas"
                 FontSize="14"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
    </Border>

    <Border Grid.Row="4" Style="{StaticResource PillBorder}" CornerRadius="14" Padding="8" Margin="0,12,0,0">
        <TextBlock Foreground="{StaticResource Dim}" Text="Footnots -etc"/>

    </Border>
    </Grid>
</Window>